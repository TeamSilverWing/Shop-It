<% for(var i=0; i<item.length; i++) {%>
   <a href = "/items/<%= item[i].id %> "><%= item[i].name %> <%= item[i].rating %></a><br>
   Name : <%= item[i].name %><br>
   Description : <%= item[i].description %><br>
   author : <%= item[i].author %><br>
<% } %>

<link href="/css/bootstrap.css" rel="stylesheet" />
<link href="/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/materialize.min.css" />

<script>
function addToCart(item)
{	
	$.ajax({
		method : "POST",
		url: "/cart/add/",
		data : "itemId="+item,
		}).done(function(data)
		{
			alert(data);
			document.getElementById(item+"-add-cart-button").style.visibility = "hidden";
			document.getElementById(item+"-delete-cart-button").style.visibility = "visible";
		});
}

function deleteFromCart(item)
{	
	$.ajax({
		method : "POST",
		url: "/cart/delete/",
		data : "itemId="+item,
		}).done(function(data)
		{
			alert(data);
			document.getElementById(item+"-delete-cart-button").style.visibility = "hidden";
			document.getElementById(item+"-add-cart-button").style.visibility = "visible";			
		});
}
</script>

<body>    
<nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo">SHOP IT!</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li><a href="/login/">Login</a></li>
            </ul>
        </div>
    </nav>

    <div id="home-sec" class="container">
        <div class="row row-pad clr-white">
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                <img src="<%= item.photo %>" class="img-responsive main-img"/>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                <h1><strong><%= item.name %></strong></h1>
                <h4><%= item.description %></h4>
                <h4><strong>Rs. <%= item.price %></strong></h4>
                
				<%if (item.visibility == 1) { %>
					<button class = "btn btn-primary" id = "<%= item.id %>-add-cart-button" onclick = "addToCart(<%= item.id %>)">Add To Cart</button>
					<button class = "btn btn-primary" id = "<%= item.id %>-delete-cart-button" style = "visibility:hidden;display:inline;" onclick = "deleteFromCart(<%= item.id %>)">Delete From Cart</button>
				<% } %>
				<%if (item.visibility == 0) { %>
					<button class = "btn btn-primary" id = "<%= item.id %>-add-cart-button" style = "visibility:hidden;display:inline;" onclick = "addToCart(<%= item.id %>)">Add To Cart</button>
					<button class = "btn btn-primary" id = "<%= item.id %>-delete-cart-button" onclick = "deleteFromCart(<%= item.id %>)">Delete From Cart</button>
				<% } %>				
            </div>
        </div>
    </div>
</body>
</html>
