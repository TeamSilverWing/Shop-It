<html>
<head>
<link rel="stylesheet" href="/css/skel.css" />
<link rel="stylesheet" href="/css/style.css" />
</head>

<script>
function addToCart(item)
{
	document.getElementById(item+"-status").innerHTML = "Adding..";
	seller = document.getElementById(item + '-seller').innerHTML;
	user = document.getElementById("user").innerHTML;
	alert(user);
	$.ajax({
		method : "POST",
		url: "/cart/",
		data : "userId="+user+"&itemId="+item + "&sellerId="+seller,
		}).done(function()
		{
			document.getElementById(item+"-status").innerHTML = "Added to the Cart";
			document.getElementById(item+"-cart-button").style.visibility = "hidden";
		});
}
</script>

<div class="wrapper style2">
		<section class="container">
			<header class="major">
				<h2>ITEMS</h2>
				<span class="byline">dkeh le kya likhna hai</span>
				<%if (user.valid == 1) { %>
				Username : <%= user.username %>
