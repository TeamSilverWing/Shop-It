<html>
<head>
<link rel="stylesheet" href="/css/skel.css" />
<link rel="stylesheet" href="/css/style.css" />
</head>

<script>
function addToCart(item)
{
	document.getElementById(item+"-status").innerHTML = "Adding..";

	//do ajax request
	$.ajax({
		method : "POST",
		url: "/cart/",
		data : "userId=2&itemId="+item,
  		context: document.body
			}).done(function()
			{
				document.getElementById(item+"-status").innerHTML = "Added to the Cart";
				document.getElementById(item+"-cart-button").style.visibility = "hidden";
			});

	
}
</script>

<div class="wrapper style2">
		<section class="container">
			<header class="major">
				<h2>ITEMS</h2>
				<span class="byline">dkeh le kya likhna hai</span>
			</header>
			
			<% for(var i=0; i<items.length; i=i+3) {%> 
			<div class="row no-collapse-1">
						<section class="4u">
							<a href="items/<%= items[i].id %>" class="image feature"><img id="image" src="<%= items[i].photo %>" ></a>
							<p><%= items[i].name%></p>
							<p><%= items[i].description %></p>
							<label id="<%= items[i].id %>-status"></label>
							<button id = "<%= items[i].id %>-cart-button" onclick = "addToCart(<%= items[i].id %>)">Add To Cart</button>
						</section>
						<%if (items.length > i+1) { %>
						<section class="4u">
							<a href="items/<%= items[i+1].id %>" class="image feature"><img id="image" src="<%= items[i+1].photo %>" ></a>
							<p><%= items[i+1].name%></p>
							<p><%= items[i+1].description %></p>
							<label id="<%= items[i+1].id %>-status"></label>
							<button id = "<%= items[i+1].id %>-cart-button" onclick = "addToCart(<%= items[i+1].id %>)">Add To Cart</button>
						</section>
						<% } %>
						<%if (items.length > i+2) { %>
						<section class="4u">
							<a href="items/<%= items[i+2].id %>" class="image feature"><img id="image" src="<%= items[i+2].photo %>" ></a>
							<p><%= items[i+2].name%></p>
							<p><%= items[i+2].description %></p>
							<label id="<%= items[i+2].id %>-status"></label>
							<button id = "<%= items[i+2].id %>-cart-button" onclick = "addToCart(<%= items[i+2].id %>)">Add To Cart</button>
							</section>
						<% } %>
						</div>
				
<% } %>
